{
  "name": "enviroanalyzer-pro",
  "version": "3.0.0",
  "description": "Environmental Quality Assessment Application (QCVN Standards)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build-installer": "electron-builder --win nsis"
  },
  "author": "Environmental Engineering Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.enviroanalyzer.pro",
    "productName": "EnviroAnalyzer Pro",
    "directories": {
      "output": "../dist"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "../assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "../assets/icon.ico",
      "uninstallerIcon": "../assets/icon.ico"
    },
    "files": [
      "**/*",
      "!node_modules/.cache"
    ],
    "extraResources": [
      {
        "from": "../",
        "to": "app",
        "filter": [
          "app.R",
          "constants.R",
          "functions.R",
          "visuals.R",
          "assets/**/*",
          "qcvn_data/**/*"
        ]
      }
    ]
  }
}
